<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Text?>

<GridPane hgap="2" vgap="5" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
     <GridPane.margin>
         <Insets bottom="15" left="10" right="10" top="10" />
    </GridPane.margin>
    <children>

        <Text fx:id="txtHeader" text="Nuevo asistente" GridPane.columnIndex="0" GridPane.rowIndex="0" />

        <Label text="Nombre: " GridPane.columnIndex="0" GridPane.rowIndex="1" />

        <TextField fx:id="tfNombre" promptText="Nombre expositor" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Edad: " GridPane.columnIndex="0" GridPane.rowIndex="2" />

        <TextField fx:id="tfEdad" promptText="Edad" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            
        <Label text="Teléfono: " GridPane.columnIndex="0" GridPane.rowIndex="3" />

        <TextField fx:id="tfFono" promptText="Teléfono" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            
        <Label text="Correo electrónico: " GridPane.columnIndex="0" GridPane.rowIndex="4" />

        <TextField fx:id="tfCorreo" promptText="Correo electrónico" GridPane.columnIndex="1" GridPane.rowIndex="4" />
    </children>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</GridPane>
