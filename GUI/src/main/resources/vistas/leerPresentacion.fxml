<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>

<GridPane 
    xmlns="http://javafx.com/javafx" 
    xmlns:fx="http://javafx.com/fxml"

    hgap="2"
    vgap="5"
    >
    
     <GridPane.margin>
         <Insets 
             top = "10"
             left = "10"
             right="10"
             bottom="15"
             />
    </GridPane.margin>
    <children>

        <Text
            fx:id = "txtHeader"
            text = "Nueva presentación"
            GridPane.columnIndex="0"
            GridPane.rowIndex="0"
            />

        <Label
            text = "Nombre: "
            GridPane.columnIndex="0"
            GridPane.rowIndex="1"
            />

        <TextField
            fx:id = "tfNombre"
            promptText = "Nombre presentación"
            GridPane.columnIndex="1"
            GridPane.rowIndex="1"
            />

        <Label
            text = "Fecha: "
            GridPane.columnIndex="0"
            GridPane.rowIndex="2"
            />

        <DatePicker
            fx:id = "dpFecha"
            promptText = "dd-mm-aaaa"
            GridPane.columnIndex="1"
            GridPane.rowIndex="2"
            />
            
        <Label
            text = "Hora de inicio: "
            GridPane.columnIndex="0"
            GridPane.rowIndex="3"
            />

        <TextField
            fx:id = "tfHora"
            promptText = "hh:mm"
            GridPane.columnIndex="1"
            GridPane.rowIndex="3"
            />
            
        <Label
            text = "Duración (minutos): "
            minWidth = "-Infinity"
            GridPane.columnIndex="0"
            GridPane.rowIndex="4"
            />

        <TextField
            fx:id = "tfDuracion"
            promptText = "Duración"
            GridPane.columnIndex="1"
            GridPane.rowIndex="4"
            />
            
        <Label
            text = "Descripción: "
            GridPane.columnIndex="0"
            GridPane.rowIndex="5"
            />

        <TextField
            fx:id = "tfDescripcion"
            promptText = "Descripción"
            GridPane.columnIndex="1"
            GridPane.rowIndex="5"
            />

        <Label
            text = "Expositor: "
            GridPane.columnIndex="0"
            GridPane.rowIndex="6"
            />

        <ComboBox
            fx:id = "comboExpositor"
            promptText = "Expositores"
            GridPane.columnIndex="1"
            GridPane.rowIndex="6"
            />
        
        <Label
            text = "Agregar Asistente: "
            GridPane.columnIndex="0"
            GridPane.rowIndex="7"
            />

        <ComboBox
            fx:id = "comboAsistentes"
            promptText = "Nuevo asistente"
            GridPane.columnIndex="1"
            GridPane.rowIndex="7"
            />
    </children>
</GridPane>
