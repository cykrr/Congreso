<VBox style="-fx-background-color: #efefef" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
    <MenuBar>
        <!-- TODO : Configurar teclas  -->
        <Menu text="Archivo">
            <MenuItem onAction="#importar" text="Abrir archivo [Ctrl + I]" />
            <MenuItem onAction="#exportar" text="Guardar cambios [Ctrl + E]" />
            <SeparatorMenuItem />
            <MenuItem text="Salir [Ctrl + W]" />
        </Menu>
        <Menu text="Editar">
            <MenuItem onAction="#crearPresentacion" text="Crear presentaciÃ³n [Ctrl + P]" />
            <MenuItem onAction="#crearExpositor" text="Crear expositor [Ctrl + X]" />
            <MenuItem onAction="#crearAsistente" text="Crear asistente [Ctrl + A]" />
            <SeparatorMenuItem />
            <MenuItem onAction="#editarPreferencias" text="Preferencias" />
        </Menu>
    </MenuBar>
    <HBox VBox.vgrow = "ALWAYS">
        <children>
            <!-- Side bar  -->
            <VBox minWidth="37.5" prefWidth="37.5">
                <children>
                    <!-- Home icon -->
                    <HBox fx:id = "homeIcon" styleClass = "btn">
                        <VBox.margin>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="10.0" />
                        </VBox.margin>
                        <ImageView fitHeight="15.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true">
                            <HBox.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                            </HBox.margin>
                            <image>
                                <Image url="@../icons/home.png" />
                            </image>
                        </ImageView>
                    </HBox>
                    <!-- detail icon -->
                    <HBox fx:id = "buscarEdadIcon" styleClass = "btn">
                        <VBox.margin>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="10.0" />
                        </VBox.margin>
                        <ImageView fitHeight="15.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true">
                            <HBox.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                            </HBox.margin>
                            <image>
                                <Image url="@../icons/detail.png" />
                            </image>
                        </ImageView>
                    </HBox>
                    <!-- search icon -->
                    <HBox fx:id = "buscarFechaIcon" styleClass = "btn">
                        <VBox.margin>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="10.0" />
                        </VBox.margin>
                        <ImageView fitHeight="15.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true">
                            <HBox.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                            </HBox.margin>
                            <image>
                                <Image url="@../icons/lupa.png" />
                            </image>
                        </ImageView>
                    </HBox>
                    <!-- Add icon -->
                    <HBox fx:id = "addIcon" styleClass = "btn">
                        <VBox.margin>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="10.0" />
                        </VBox.margin>
                        <ImageView fitHeight="15.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true">
                            <HBox.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                            </HBox.margin>
                            <image>
                                <Image url="@../icons/add.png" />
                            </image>
                        </ImageView>
                    </HBox>
                </children>
            </VBox>
            <!-- Main View holder  -->
            <VBox fx:id="vistaPrincipal" HBox.hgrow="ALWAYS" />
        </children>
    </HBox>
</VBox>
