                <HBox nodeOrientation = "LEFT_TO_RIGHT">

                    <Busqueda fx:id="cajaBusqueda" onAction="#buscar" >
                        <HBox.margin>
                            <Insets bottom="0" left="0" right="30" top="10" />
                        </HBox.margin>
                    </Busqueda>
                </HBox>

            </children>
        </HBox>
    </HBox>
    <HBox prefHeight="150.0" prefWidth="250.0">
        <children>
            <VBox fx:id = "botonPresentaciones"
                prefHeight="200.0"
                prefWidth="200.0"
                styleClass="box">
