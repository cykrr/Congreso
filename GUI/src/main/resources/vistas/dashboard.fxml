<?import Gui.Vistas.Busqueda.*?>

<VBox 
    VBox.vgrow="ALWAYS"
    style = "-fx-background-color: #ffffff"
    xmlns="http://javafx.com/javafx/18"
    xmlns:fx="http://javafx.com/fxml/1"
    >

<children>
    <HBox>
       <VBox.margin>
          <Insets bottom="20.0"/>
       </VBox.margin>
        <HBox maxHeight="50.0" prefHeight="100.0" prefWidth="200.0">
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Dashboard" styleClass = "h1">
                <VBox.margin>
                    <Insets left="15.0" top="10.0" />
                </VBox.margin>
                <!-- <font> -->
                <!--     <Font size="20.0" /> -->
                <!-- </font> -->
               <HBox.margin>
                  <Insets left="20.0" top="20.0" />
               </HBox.margin>
            </Text>
        </HBox>
        <HBox maxHeight="50.0" nodeOrientation="RIGHT_TO_LEFT" prefHeight="100.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
            <children>
