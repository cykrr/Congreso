<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.DatePicker?>
<?import java.time.LocalDate?>
<?import java.time.format.DateTimeParseException?>

<VBox style="-fx-background-color: #ffffff;" stylesheets="@../styles.css" HBox.hgrow="always" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox>
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="h1" text="Busqueda Presentaciones">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="15.0" />
               </VBox.margin>
            </Text>
         </children>
      </VBox>
      <VBox>
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="h2" text="Presentaciones desde una fecha en adelante:">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="15.0" />
               </VBox.margin>
            </Text>
            <HBox>
               <VBox.margin>
                  <Insets left="10.0" />
               </VBox.margin>
               <children>
                  <Text 
                  	strokeType="OUTSIDE" 
                  	strokeWidth="0.0" 
                  	styleClass="h2" 
                  	text="Ingrese fecha:   " />
                  <DatePicker 
                  	fx:id="dpFecha" 
                  	onAction="#textInput" />
               </children>
            </HBox>
         </children>
      </VBox>

    <VBox style="-fx-background-color: transparent; -fx-border-color: transparent" VBox.vgrow="ALWAYS">
        <children>
            <ScrollPane fx:id="scroll" style="-fx-background-color: transparent; -fx-border-color: transparent" VBox.vgrow="ALWAYS">
                <VBox fx:id="scrollBox" style="-fx-background-color: transparent; -fx-border-color: transparent;">
                </VBox>
            </ScrollPane>
        </children>
        <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </VBox.margin>
    </VBox>
   </children>
</VBox>
